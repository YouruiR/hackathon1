{
    "manifest_version": 3,
    "name": "GlobalCart2",
    "version": "1.0",
    "permissions": ["storage", "tabs", "activeTab"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title" : "Global Cart",
        "default_icon" : {
            "16": "cart.png",
            "24": "cart.png",
            "32": "cart.png"
        },
        "default_popup" : "popup.html"
      }
}